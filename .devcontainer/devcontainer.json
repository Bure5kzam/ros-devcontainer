// vscode extension 설정버전
{
	"name": "ros-vscode-container",
	"build" : {
		"dockerfile" : "./Dockerfile",
		"context" : "./",
		"args": {
			"FROM_IMAGE" : "ros:humble",
			"OriginalWorkspacePath" : "/humble"
		}
		// "dockerfile" : "./Dockerfile.vscode-extension",
		// "context" : "../",
	},
	"workspaceFolder": "/",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": { "bash": { "path": "/bin/bash" } }
			},
			// "extensions": [
			// 	"ms-vscode.cmake-tools",
			// 	"twxs.cmake",
			// 	"sweilz.ros-snippets",
			// 	"deitry.colcon-helper",
			// 	"smilerobotics.urdf",		// urdf 파일 곤련 플러그인
			// 	"sweilz.ros-snippets",
			// 	"eamodio.gitlens"
			// ]
		}
	},
	// install vscode extension 
	"onCreateCommand": ["/bin/bash", "-c", "(echo 'export PATH=`echo ~/.vscode-server/bin/*/bin`:$PATH'; echo 'export VSCODE_IPC_HOOK_CLI=`echo /tmp/vscode-ipc-*.sock`')", ">>", "/root/.bashrc"],
	"postCreateCommand" :["/bin/bash", "-c", "printenv"]
}
